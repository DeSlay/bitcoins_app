<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/colorPrimary"
             tools:context=".view.EURFragment">

    <TextView
            android:text="click to load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bitcoinValues"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bitcoin"
            android:layout_marginLeft="176dp"
            app:layout_constraintVertical_bias="0.396"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/bestbitcoinappsandroid"
            android:id="@+id/bitcoin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="304dp" android:layout_marginRight="104dp"/>
    <TextView
            android:text="Devise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="507dp"
            android:id="@+id/txtDevise" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.487"/>

</android.support.constraint.ConstraintLayout>