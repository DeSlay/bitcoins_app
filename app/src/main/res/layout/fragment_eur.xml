<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A6BDDD"
        tools:context=".view.EURFragment">

    <TextView
            android:text="click to load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bitcoinValues"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bitcoin"
            android:layout_marginLeft="176dp"
            app:layout_constraintVertical_bias="0.396"/>
    <ImageView
            android:layout_width="377dp"
            android:layout_height="305dp"
            app:srcCompat="@drawable/bestbitcoinappsandroid"
            android:id="@+id/bitcoin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="300dp" android:layout_marginRight="16dp"/>


    <TextView
            android:text="Devise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDevise" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.488" android:textStyle="bold"
            android:layout_marginBottom="62dp" app:layout_constraintBottom_toTopOf="@+id/bitcoinValues"
            android:textSize="30sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtUpdated"
            app:layout_constraintTop_toBottomOf="@+id/bitcoinValues" android:layout_marginTop="116dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" android:textStyle="italic" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDescription"
            app:layout_constraintTop_toBottomOf="@+id/bitcoinValues" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>